# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:3001

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/seyda_matematik?retryWrites=true&w=majority

# ============================================
# EMAIL CONFIGURATION (Gmail Example)
# ============================================
# For Gmail: smtp.gmail.com, Port: 587
# For other providers, check their SMTP settings

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM_NAME=Şeyda Açıker Eğitim Platformu

# Admin email to receive notifications
ADMIN_EMAIL=seyda.aciker@gmail.com

# ============================================
# SECURITY
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your_admin_api_key_here
JWT_SECRET=your_jwt_secret_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
